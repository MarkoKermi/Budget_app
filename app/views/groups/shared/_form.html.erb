<%= form_with url: user_groups_path(user_id: current_user.id), model: group, method: :post, scope: :new_group do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.text_field :icon %>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>